<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="800" prefWidth="1440" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.biteme.app.view.OrdineView">

    <top>
        <StackPane>
            <!-- Rettangolo superiore -->
            <Rectangle fill="#303d68" height="120" width="1440" />

            <!-- Pulsante Indietro -->
            <Button onAction="#handleIndietro" prefHeight="40" prefWidth="100" style="-fx-font-size: 16px; -fx-background-color: #e02189; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px;" text="Indietro" StackPane.alignment="CENTER_LEFT">
                <StackPane.margin>
                    <Insets left="15" />
                </StackPane.margin>
            </Button>
        </StackPane>
    </top>

    <bottom>
        <AnchorPane>
            <!-- Rettangolo inferiore -->
            <Rectangle height="120" width="1440" fill="#303d68" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />

            <!-- Pulsante Salva -->
            <Button text="Salva" onAction="#handleSalva"
                    style="-fx-font-size: 16px; -fx-background-color: #e02189; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px;"
                    prefHeight="40" prefWidth="100"
                    AnchorPane.rightAnchor="150" AnchorPane.bottomAnchor="40" />

            <!-- Pulsante Checkout -->
            <Button text="Checkout" onAction="#handleCheckout"
                    style="-fx-font-size: 16px; -fx-background-color: #e02189; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px;"
                    prefHeight="40" prefWidth="100"
                    AnchorPane.rightAnchor="25" AnchorPane.bottomAnchor="40" />
        </AnchorPane>
    </bottom>

    <!-- Colonna Sinistra con i Pulsanti delle Categorie -->
    <left>
        <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-background-color: #f4f4f4;">
            <!-- Pulsanti delle categorie con azioni associate -->
            <Button onAction="#handleCategoriaBevande" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Bevande" />
            <Button onAction="#handleCategoriaAntipasti" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Antipasti" />
            <Button onAction="#handleCategoriaPizze" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Pizze" />
            <Button onAction="#handleCategoriaPrimiPiatti" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Primi Piatti" />
            <Button onAction="#handleCategoriaSecondiPiatti" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Secondi Piatti" />
            <Button onAction="#handleCategoriaContorni" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Contorni" />
            <Button onAction="#handleCategoriaDolci" prefHeight="60" prefWidth="180" style="-fx-background-color: #303d68; -fx-font-size: 16px; -fx-text-fill: white;" text="Dolci" />
        </VBox>
    </left>



    <!-- Parte Centrale con i Prodotti -->
    <center>
        <!-- Uso ScrollPane per rendere la sezione scorrevole -->
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <!-- Contenitore HBox per spostare gli elementi verso destra -->
            <HBox>
                <!-- Spaziatura verso destra tramite un Region -->
                <Region prefWidth="20" /> <!-- Spostamento verso destra -->
                <VBox>
                    <!-- Spaziatura in alto tramite un altro Region -->
                    <Region prefHeight="20" /> <!-- Spostamento verso il basso -->
                    <FlowPane fx:id="flowPaneProdotti" hgap="20" vgap="20">                        <!-- Esempio di prodotto -->
                        <VBox alignment="CENTER" prefHeight="150" prefWidth="150" spacing="10" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, lightgray, 10, 0, 3, 3);">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Prodotto 1" />
                            <Label style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Quantità" />
                            <HBox alignment="CENTER" spacing="10">
                                <Button prefHeight="30" prefWidth="30" text="-" />
                                <Label fx:id="quantitaProdotto1" style="-fx-font-size: 14px;" text="0" />
                                <Button prefHeight="30" prefWidth="30" text="+" />
                            </HBox>
                        </VBox>

                        <!-- Esempio di prodotto aggiuntivo -->
                        <VBox alignment="CENTER" prefHeight="150" prefWidth="150" spacing="10" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, lightgray, 10, 0, 3, 3);">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Prodotto 2" />
                            <Label style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Quantità" />
                            <HBox alignment="CENTER" spacing="10">
                                <Button prefHeight="30" prefWidth="30" text="-" />
                                <Label fx:id="quantitaProdotto2" style="-fx-font-size: 14px;" text="0" />
                                <Button prefHeight="30" prefWidth="30" text="+" />
                            </HBox>
                        </VBox>

                        <!-- Aggiungere altri rettangoli come necessario -->
                    </FlowPane>
                </VBox>
            </HBox>
        </ScrollPane>
    </center>


    <!-- Colonna Destra per il Riepilogo -->
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="400" spacing="10" style="-fx-background-color: #e8e8e8; -fx-padding: 5;"> <!-- Padding uniforme -->

            <!-- Contenuto -->
            <Label fx:id="nomeTavolo" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Tavolo 1" />

            <!-- Titolo delle colonne -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 3;"> <!-- Leggero padding -->
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="DESCRIZIONE" />
                <Pane HBox.hgrow="ALWAYS" /> <!-- Spazio flessibile -->
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="EURO" />
            </HBox>

            <Separator />

            <!-- Scorrimento per il contenuto dinamico -->
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <VBox fx:id="riepilogoContenuto" spacing="10">

                </VBox>
            </ScrollPane>

            <Separator />

            <!-- Totale in fondo: TOTALE EURO -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;"> <!-- Leggero padding -->
                <!-- Colonna Descrizione per la scritta 'Totale' -->
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="TOTALE EURO" />
                <Pane HBox.hgrow="ALWAYS" /> <!-- Spazio flessibile -->
                <!-- Colonna Euro per il totale -->
                <Label fx:id="totaleOrdine" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="" />
            </HBox>
        </VBox>
    </right>

</BorderPane>
